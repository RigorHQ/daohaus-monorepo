{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/moloch-v3-subgraph/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pwd",
        "cwd": "apps/moloch-v3-subgraph"
      }
    },
    "generate-config": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "node manifests/deploy-prep.js {args.network}",
            "forwardAllArgs": true
          }
        ],
        "cwd": "apps/moloch-v3-subgraph"
      }
    },
    "generate-code": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["graph codegen", "graph build"],
        "cwd": "apps/moloch-v3-subgraph",
        "parallel": false
      }
    },
    "graph-deploy": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "graph deploy --node https://api.thegraph.com/deploy/ --ipfs https://api.thegraph.com/ipfs/ {args.name}",
            "forwardAllArgs": true
          }
        ],
        "cwd": "apps/moloch-v3-subgraph",
        "parallel": false
      }
    },
    "graph-deploy-studio": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "node manifests/deploy-prep.js {args.network} && graph deploy --studio {args.name}",
            "forwardAllArgs": true
          }
        ],
        "cwd": "apps/moloch-v3-subgraph",
        "parallel": false
      }
    }
  },
  "tags": []
}
